<?xml version="1.0" encoding="utf-8"?>
<!-- layout for create folder or rename file -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rename_layout"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_edit_text_frame_width" 
    android:layout_height="@dimen/dialog_edit_text_frame_height" 
    android:gravity="center">

    <EditText android:id="@+id/edit_text" 
        android:layout_width="@dimen/dialog_edit_text_width"
        android:minHeight="@dimen/dialog_edit_text_height"
        android:layout_height="wrap_content" 
        android:inputType="textNoSuggestions" />
</LinearLayout>
