<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="common_list_style">
	    <item name="android:divider">?android:attr/listDivider</item>	</style>
	
	<style name="common_spinner_style">
	    <item name="android:layout_margin">5dp</item>
	</style>
	
	<style name="common_rating_bar_style">
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:rating">0</item>
	    <item name="android:numStars">5</item>
	    <item name="android:stepSize">.5</item>
	</style>
	
	<style name="multi_line_edit_text_style">
	    <item name="android:layout_margin">@dimen/des_edit_text_margin</item>
	    <item name="android:padding">@dimen/des_edit_text_padding</item>
	    <item name="android:maxLines">5</item>
	    <item name="android:background">@drawable/des_text_bg</item>
	    <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Inverse</item>
	    <item name="android:ellipsize">end</item>
	    <item name="android:textColorHint">@color/text_hint_text_color</item>
	</style>
	
	<style name="shadow_text_style">
	    <item name="android:shadowColor">@android:color/black</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">1</item>
	</style>
</resources>
